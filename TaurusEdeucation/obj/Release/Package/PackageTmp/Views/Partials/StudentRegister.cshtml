@model TaurusEdeucation.Models.StudentRegisterModel
@{
    using(Html.BeginUmbracoForm("StudentRegisterPost", "StudentRegisterSurface"))
    {
        <table class="taurus-newstudent-table">
            <tr class="taurus-table-line">
                <td class="taurus-newstudent-labelcontainer">
                    @Html.LabelFor(m => m.firstName, "Jméno", new { @class="taurus-newstudent-inputlabel" })    
                </td>
                <td>
                    @Html.TextBoxFor(m => m.firstName, new { @class="taurus-newstudent-input" })
                    @Html.ValidationMessageFor(m => m.firstName, "", new { @class="field-validation-error-input" })    
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newstudent-labelcontainer">
                    @Html.LabelFor(m => m.surName, "Příjmení", new { @class="taurus-newstudent-inputlabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.surName, new { @class="taurus-newstudent-input" })
                    @Html.ValidationMessageFor(m => m.surName, "", new { @class="field-validation-error-input" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newstudent-labelcontainer">
                    @Html.LabelFor(m => m.email, "E-mail", new { @class="taurus-newstudent-inputlabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.email, new { @class="taurus-newstudent-input" })
                    @Html.ValidationMessageFor(m => m.email, "", new { @class="field-validation-error-input" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newstudent-labelcontainer">
                    @Html.LabelFor(m => m.phone, "Telefon", new { @class="taurus-newstudent-inputlabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.phone, new { @class="taurus-newstudent-input" })
                    @Html.ValidationMessageFor(m => m.phone, "", new { @class="field-validation-error-input" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newstudent-labelcontainer">
                    @Html.LabelFor(m => m.levelOfStudy, "Úroveň doučování", new { @class="taurus-newstudent-inputlabel" })
                </td>
                <td>
                    @Html.DropDownListFor(m => m.levelOfStudy, Model.levelsList, new { id="level", @class="taurus-newstudent-dropdown" })
                    @Html.ValidationMessageFor(m => m.levelOfStudy, "", new { @class="field-validation-error-input" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newlector-labelcontainer">
                    @Html.LabelFor(m => m.lessons, "Předmět", new { @class="taurus-newlector-inputlabel" })
                </td>
                <td>
                    @Html.DropDownListFor(m => m.lessons.output, Model.lessons.list, new { id="lesson", @class="taurus-newstudent-dropdown" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newlector-labelcontainer">
                    @Html.LabelFor(m => m.location, "Kde", new { @class="taurus-newlector-inputlabel" })
                </td>
                <td>
                    @Html.DropDownListFor(m => m.location, Model.locationList, new { id="locationDropDown", onchange="DisplayStudentAddressInput()", @class="taurus-newstudent-dropdown" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newlector-labelcontainer">
                    @Html.LabelFor(m => m.studentCity, "Město, kde chceš doučovaní:", new { id="studentCityLabel", style="display: none", @class="taurus-newlector-inputlabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.studentCity, new { id="studentCity", style="display: none", @class="taurus-newstudent-dropdown" })
                </td>
            </tr>
            <tr class="taurus-table-line">
                <td class="taurus-newlector-labelcontainer">
                    @Html.LabelFor(m => m.studentStreet, "Ulice, kde chceš doučovaní:", new { id="studentStreetLabel", style="display: none", @class="taurus-newlector-inputlabel" })
                </td>
                <td>
                    @Html.TextBoxFor(m => m.studentStreet, new { id="studentStreet", style="display: none", @class="taurus-newstudent-dropdown" })
                </td>
            </tr>
        </table>
        
        <input class="taurus-newlector-submit taurus-hidden" type="submit">
    }
    
    var tempValueObject = TempData["RegistrationStatus"];
    
    if (tempValueObject != null)
    {    
        <div class="field-validation-error taurus-newlector-registrationstatus">
            @tempValueObject
        </div>
    }
}

<button onclick="getAvailableLectors()" class="taurus-newstudent-buttonfindlectors">Najít lektory</button>

